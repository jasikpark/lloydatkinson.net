---
import BaseHead from './BaseHead';
import BlogHeader from './BlogHeader';

export interface Props {
  title: string;
  description: string;
  image?: string;
  permalink?: string;
}
const { title, description, image, permalink } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
    <BaseHead title={title} description={description} image={image} permalink={permalink} />
</head>
<body>
    <BlogHeader />
    <slot />
</body>
</html>