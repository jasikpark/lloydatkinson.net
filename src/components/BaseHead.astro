---
export interface Props {
  title: string;
  description: string;
  image?: string;
  permalink?: string;
}
const { title, description, image = 'https://i.imgur.com/ZXzEafL.jpg', permalink = Astro.site.pathname } = Astro.props;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width" />
<link rel="icon" type="image/x-icon" href="/favicon.ico" />
<link rel="stylesheet" type="text/css" href={Astro.resolve("../styles/fonts.css")}>
<link rel="stylesheet" type="text/css" href={Astro.resolve("../styles/global.css")}>
<link rel="sitemap" href="/sitemap.xml"/>

<!-- Analytics -->
<script defer data-domain="yourdomain.com" src="https://plausible.io/js/plausible.js"></script>

<!-- Primary Meta Tags -->
<title>{title} - Lloyd Atkinson</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:url" content={permalink} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:type" content="website" />
<meta property="og:image" content={image} />

<!-- Twitter -->
<meta property="twitter:url" content={permalink} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:creator" content="@lloydjatkinson" />
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:image" content={image} />

